<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Profile View Page -->
        <template id="profile_view">
            <t t-call="website.layout">

                <div class="container">
                    <t t-if="profile_saved">
                        <div class="col-md-12">
                            <div class="alert alert-success mt32 mb0">Profile has been saved successfully</div>
                        </div>
                    </t>
                </div>

                <div class="container">
                    <div class="col-md-12">
                        <h2> 
                            <t t-if="is_administrator or partner.id == user_id.partner_id.id">
                                <a class="btn btn-primary mt16 mb16" t-att-href="'/marketplace/profile/edit/%s' % partner.id">Edit</a>
                            </t>
                            I am <t t-if="partner.title"><img t-att-src="'/website_membership_users/static/src/img/title_' + str(partner.title.id) + '.png'" style="height: 22px;margin-top: -6px;" /></t> <t t-esc="partner.name"/> - <t t-esc="partner.ref"/>
                        </h2>
                    </div>
                </div>

                <div class="container">
                    <div class="col-md-2">
                        <img t-att-src="images['image_big']" class="img img-responsive thumbnail"/>
                        <div>
                            Born : <t t-esc="birthdate" />
                        </div>

                        <div class="mb32">
                            <div class="clearfix"></div>
                            <t t-if="membership">
                                <span class="badge badge-success mt4"><t t-esc="membership.name"/></span>
                            </t>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-3 col-xs-3 control-label" for="street1">Street #1</label>
                                        <div class="col-md-9 col-xs-9">
                                            <t t-esc="partner.street"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-3 col-xs-3 control-label" for="street2">Street #2</label>
                                        <div class="col-md-9 col-xs-9">
                                            <t t-esc="partner.street2"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-3 col-xs-3 control-label" for="zip">Postalcode</label>
                                        <div class="col-md-9 col-xs-9">
                                            <t t-esc="partner.zip"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-3 col-xs-3 control-label" for="city">City</label>
                                        <div class="col-md-9 col-xs-9">
                                            <t t-esc="partner.city"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-3 col-xs-3 control-label" for="state">State</label>
                                        <div class="col-md-9 col-xs-9">
                                            <t t-esc="partner.state_id.name"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-3 col-xs-3 control-label" for="country">Country</label>
                                        <div class="col-md-9 col-xs-9">
                                            <t t-esc="partner.country_id.name"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mt32 mb16"><h4>Contact info</h4></div>
                            <div class="col-md-5 mb32">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-4 col-xs-4 control-label" for="email">Email</label>
                                        <div class="col-md-8 col-xs-8">
                                            <t t-esc="partner.email"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-6 col-xs-6 control-label" for="partner.notify_email">Receive our news</label>
                                        <div class="col-md-6 col-xs-6">
                                            <t t-esc="partner.notify_email"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-4 col-xs-4 control-label" for="gsm">GSM</label>
                                        <div class="col-md-8 col-xs-8">
                                            <t t-esc="partner.mobile"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-6 col-xs-6 control-label" for="partner.notify_sms">Receive our SMS</label>
                                        <div class="col-md-6 col-xs-6">
                                            <t t-esc="partner.notify_sms"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-md-4 col-xs-4 control-label" for="home">Home</label>
                                        <div class="col-md-8 col-xs-8">
                                            <t t-esc="partner.phone"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <section class="bg-gray pt32 pb32">
                    <div class="container">
                        <div class="col-md-12">
                            <h3 class="mb32">My Resources</h3>
                        </div>
                    </div>
                    
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <table class="table">
                                            <thead>
                                                <tr><th>Skills</th></tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="partner.skill_category_ids" t-as="category">
                                                    <tr><td><t t-esc="category.name"/></td></tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <table class="table">
                                            <thead>
                                                <tr><th>Interests</th></tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="partner.skill_tag_ids" t-as="tag">
                                                    <tr><td><t t-esc="tag.name"/></td></tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <t t-if="partner.see_balance">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="col-md-8">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th colspan="2">Balance</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="partner.wallet_balance_ids" t-as="balance">
                                                        <tr>
                                                            <td><t t-esc="balance.available"/></td>
                                                            <td><t t-esc="balance.currency_id and balance.currency_id.name"/></td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>

                <t t-call="website_membership_users.profile_edit_groups"/>

                <!-- marketplace listing -->
                <section class="pt32 bg-success">
                    <div class="container">
                    <!-- Our Wants column -->
                    <div class="col-md-6">
                        <div class="col-md-12 mb16">
                            <h3 class="pull-left">My Wants</h3>
                            <a href="/marketplace/announcement_detail/new" class="btn btn-success pull-right mt16 btn-nolink">Add new Want</a>
                        </div>
                        <t t-foreach="wants" t-as="item">
                            <!-- single item -->
                            <div class="col-md-12">
                                <t t-call="website_marketplace.mp_single_item"/>
                            </div>
                            <!-- /single item -->
                        </t>
                    </div>
                    <!-- /Our Wants column -->

                    <!-- Our Offers column -->
                    <div class="col-md-6">
                        <div class="col-md-12 mb16">
                            <h3 class="pull-left">My Offers</h3>
                            <a href="/marketplace/announcement_detail/new" class="btn btn-success pull-right mt16 btn-nolink">Add new Offer</a>
                        </div>
                        <t t-foreach="offers" t-as="item">
                            <!-- single item -->
                            <div class="col-md-12">
                                <t t-call="website_marketplace.mp_single_item"/>
                            </div>
                            <!-- /single item -->
                        </t>
                    </div>
                    <!-- /Our Offers column -->
                    </div>
                </section>
                <!-- /marketplace listing -->

                <!-- activity -->
                <section class="pb32">
                    <div class="container">
                        <div class="col-md-12 mt32">
                            <h2 class="mb32">My Activity</h2>
                        </div>
                    </div>

                    <div class="container">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-8">
                                    <h3>My last exchanges</h3>
                                    <!-- TODO: fix for mobile -->
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>What</th>
                                                <th>How many</th>
                                                <th>With who</th>
                                                <th>When</th>
                                                <th>Where</th>
                                                <th>Paid</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="last_exchanges" t-as="exchange">
                                                <tr>
                                                    <td><t t-esc="exchange.type"/></td>
                                                    <td><t t-esc="exchange.announcement_id.name"/></td>
                                                    <td><t t-esc="exchange.quantity"/> <t t-esc="exchange.uom_id.name"/></td>
                                                    <td>
                                                        <t t-if="exchange.announcement_id.partner_id.id == partner.id">
                                                            <t t-esc="exchange.receiver_id.name"/>
                                                        </t>
                                                        <t t-if="not exchange.announcement_id.partner_id.id == partner.id">
                                                            <t t-esc="exchange.sender_id.name"/>
                                                        </t>
                                                    </td>
                                                    <td><t t-esc="exchange.write_date"/></td>
                                                    <td><t t-esc="exchange.announcement_id.city"/></td>
                                                    <td><t t-esc="exchange.total"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- /activity -->
            </t>
        </template>
    </data>
</openerp>