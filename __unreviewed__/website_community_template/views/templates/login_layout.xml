<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="login_layout" inherit_id="website.login_layout" name="Login Layout">
            <xpath expr="t" position="replace">
                <t t-call="website.layout">
                    <t t-set="hide_header" t-value="True"/>
                    <t t-set="hide_footer" t-value="True"/>
                    <div class="oe_website_login_container bg-gray" t-raw="0"/>
                </t>
            </xpath>
        </template>
    </data>
</openerp>